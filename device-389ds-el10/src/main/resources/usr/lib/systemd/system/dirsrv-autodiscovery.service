# systemd service for managing all 389ds autoconfiguration.

[Unit]
Description=389 Directory Server Configuration Autodiscovery
After=firewalld.service

[Service]
Type=oneshot
ExecStart=/usr/bin/flock -s /etc/device/services/ldap/ /usr/libexec/device/autodiscovery/389ds start
ExecReload=/usr/bin/flock -s /etc/device/services/ldap/ /usr/libexec/device/autodiscovery/389ds reload
RemainAfterExit=on
PrivateTmp=true

[Install]
WantedBy=multi-user.target

